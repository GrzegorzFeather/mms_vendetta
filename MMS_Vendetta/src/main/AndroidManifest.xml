<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mms.vendetta"
    android:versionCode="7"
    android:versionName="1.1.1" >

    <uses-sdk
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.mms.app.MMSApplication"
        android:theme="@style/Theme.MMS" >
        <activity
            android:name="com.mms.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/Theme.MMS.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mms.activity.HomeActivity"
            android:icon="@drawable/img_logo"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MMS.Translucient"/>
		<activity android:name="com.mms.activity.RegisterActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		<activity android:name="com.mms.activity.MeActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		<activity android:name="com.mms.activity.DiscographyActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		<activity android:name="com.mms.activity.AlbumActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		<activity android:name="com.mms.activity.GalleryActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		<activity android:name="com.mms.activity.EventsActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		<activity android:name="com.mms.activity.VideosActivity"
		    android:icon="@drawable/img_logo"
		    android:screenOrientation="portrait"/>
		
		<!-- Google Definitions -->
		<meta-data android:name="com.google.android.gms.version"
		    android:value="@integer/google_play_services_version" />
		
        <!-- Facebook Definitions -->
        <activity android:name="com.facebook.LoginActivity"/>
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        
    </application>

</manifest>