<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Compat ActionBar no actionbar -->
    <style name="Theme.MMS.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- Compat ActionBar translucient -->
    <style name="Theme.MMS.Translucient"
           parent="@style/Theme.MMS">
        <item name="windowActionBarOverlay">true</item>

        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    <!-- Compat ActionBar customization -->
    <style name="Theme.MMS"
           parent="@style/Theme.AppCompat.Light">
        <item name="actionOverflowButtonStyle">@style/Theme.MMS.ActionBar.Overflow</item>

        <item name="android:actionOverflowButtonStyle">@style/Theme.MMS.ActionBar.Overflow</item>
    </style>
    
    <style name="Theme.MMS.ActionBar.Overflow"
        parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    
    <style name="pick_friend_dialog" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="news_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>